<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AsistenteEscolar.Views.AsistenciasViews.TomarAsistencia">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="Tomar Asistencia"
                   FontSize="Large"
                   HorizontalOptions="Center" />
            <ScrollView>
                <StackLayout x:Name="AlumnosStackLayout"
                             Padding="10,0">
                    <!-- Los alumnos se agregarán dinámicamente aquí -->
                </StackLayout>
            </ScrollView>
            <Button Text="Guardar Asistencia"
                    Clicked="GuardarAsistencia_Clicked"
                    HorizontalOptions="FillAndExpand"
                    Margin="10" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>
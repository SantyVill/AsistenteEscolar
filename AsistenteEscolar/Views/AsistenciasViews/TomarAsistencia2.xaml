<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AsistenteEscolar.Views.AsistenciasViews.TomarAsistencia2">
    <ContentPage.Content>
        <StackLayout VerticalOptions="CenterAndExpand">
            <Label x:Name="AlumnoLabel"
                   FontSize="24"
                   HorizontalTextAlignment="Center"
                   Margin="10" />
            <StackLayout Orientation="Horizontal"
                         HorizontalOptions="CenterAndExpand"
                         Margin="10">
                <RadioButton x:Name="PresenteRadioButton"
                             Content="Presente" />
                <RadioButton x:Name="AusenteRadioButton"
                             Content="Ausente" />
            </StackLayout>
            <Button Text="Siguiente Alumno"
                    Clicked="NextButton_Clicked"
                    HorizontalOptions="CenterAndExpand"
                    Margin="10" />
            <Button Text="Guardar Asistencia"
                    Clicked="GuardarAsistenciaButton_Clicked"
                    HorizontalOptions="CenterAndExpand"
                    Margin="10" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>

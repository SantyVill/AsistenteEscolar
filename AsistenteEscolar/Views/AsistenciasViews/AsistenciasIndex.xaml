<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AsistenteEscolar.Views.AsistenciasViews.AsistenciasIndex">
    <ContentPage.ToolbarItems>
        <ToolbarItem Text="Tomar Asistencia"
                     Clicked="TomarAsistencia_Clicked" />
    </ContentPage.ToolbarItems>
    <ContentPage.Content>
        <StackLayout>
            <ListView x:Name="AsistenciaListView"
                      ItemsSource="{Binding Asistencias}">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <!-- Aquí defines la apariencia de cada elemento de la lista -->
                        <TextCell Text="{Binding Fecha}"
                                  Detail="{Binding MateriaId}" />
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>
